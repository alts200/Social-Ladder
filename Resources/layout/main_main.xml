<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    ///Ниже - фотография пользователя
    
    <ImageView
        android:src="@drawable/Motz"
        android:layout_width="231.0dp"
        android:layout_height="196.0dp"
        android:id="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22.5dp" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        tools:text="Георгий Мотз"
        android:layout_below="@id/imageView1"
        android:textColor="#ff000000"
        android:layout_marginTop="19.0dp" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:id="@+id/progressBar1"
        android:max="100"
        android:progress="41" />
    ///Ниже - картинка с рейтингом пользователя
    
    <ImageView
        android:src="@drawable/five"
        android:layout_width="219.0dp"
        android:layout_height="198.5dp"
        android:layout_below="@id/progressBar1"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44.0dp" />


</RelativeLayout>
